<div>
  <div class="data-table-pagination-left">
    Displaying {{startItem}}-{{endItem}}
    {{#if total}} of {{total}}{{/if}}
    {{#if sizeOptions}}
      |
      <select onchange={{action (mut size) value="target.value"}}>
        {{#each sizeOptions as |sizeOption|}}
          <option value={{sizeOption}} selected={{eq size sizeOption}}>{{sizeOption}}</option>
        {{/each}}
      </select> per page
    {{/if}}
  </div>
  {{#if hasMultiplePages}}
    <div class="data-table-pagination-right">
      <button disabled={{isFirstPage}} type="button" {{action "changePage" links.first}}>First</button>
      <button disabled={{isFirstPage}} type="button" {{action "changePage" links.prev}}>Previous</button>
      <select onchange={{action (mut currentPage) value="target.value"}}>
        {{#each pageOptions as |sizeOption|}}
          <option value={{sizeOption}} selected={{eq currentPage sizeOption}}>{{sizeOption}}</option>
        {{/each}}
      </select>
      <button disabled={{isLastPage}} type="button" {{action "changePage" links.next}}>Next</button>
      <button disabled={{isLastPage}} type="button" {{action "changePage" links.last}}>Last</button>
    </div>
  {{/if}}
</div>
